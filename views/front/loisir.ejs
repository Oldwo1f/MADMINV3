<body class="stretched">
    <script>
        var globalGraphSettings = {animation : Modernizr.canvas,scaleOverride: true,scaleSteps: 10,scaleStepWidth: 10,scaleStartValue: 0};
    </script>
    <!-- Document Wrapper
    ============================================= -->
    <div id="wrapper" class="clearfix">

       <% include menu.ejs %>
        <!-- Page Title
        ============================================= -->
        <section id="page-title">

            <div class="container clearfix">
                <h1>Senior <i class="icon-line2-symbol-male"></i><i class="icon-line2-symbol-female"></i> Loisir</h1>
                <!-- <div id="portfolio-navigation">
                    <a href="#"><i class="icon-angle-left"></i></a>
                    <a href="#"><i class="icon-line-grid"></i></a>
                    <a href="#"><i class="icon-angle-right"></i></a>
                </div> -->
            </div>

        </section><!-- #page-title end -->

        <!-- Portfolio Single Gallery
        ============================================= -->
        <section id="slider" class="slider-parallax swiper_wrapper clearfix" style="height: 600px;">

            <div class="swiper-container swiper-parent">
                <div class="swiper-wrapper">
                    <div class="swiper-slide" style="background-image: url('images/front/2000x1333.jpg');"></div>
                    <div class="swiper-slide" style="background-image: url('images/front/2000x1333.jpg');"></div>
                    <div class="swiper-slide" style="background-image: url('images/front/2000x1333.jpg');"></div>
                </div>
                <div id="slider-arrow-left"><i class="icon-angle-left"></i></div>
                <div id="slider-arrow-right"><i class="icon-angle-right"></i></div>
            </div>

            <script>
                jQuery(document).ready(function($){
                    var swiperSlider = new Swiper('.swiper-parent',{
                        paginationClickable: false,
                        slidesPerView: 1
                    });

                    $('#slider-arrow-left').on('click', function(e){
                        e.preventDefault();
                        swiperSlider.swipePrev();
                    });

                    $('#slider-arrow-right').on('click', function(e){
                        e.preventDefault();
                        swiperSlider.swipeNext();
                    });
                });
            </script>

        </section><!-- .portfolio-single-image end -->

        <!-- Content
        ============================================= -->
        <section id="content">

            <div class="content-wrap">
                <div class="container">
                <div class="promo promo-dark promo-flat bottommargin">
                        <h3>Pas de <span>compétition,</span> mais beaucoup de <span>matchs à l'entrainement.</span></h3>
                        <span>Que du fun, du plaisir et du volley-ball ! Passez nous voir le mercredi de 20h à 22h, en n'oubliant pas votre tenue de sport !</span>
                        <a href="/contact" target="_BLANK" class="button button-dark button-xlarge button-rounded">Je participe</a>
                </div>
                </div>
                <div class="container">
                    <% for(var i=0; i< project.players.length ; i++){%>
                        <div class="col-md-6 bottommargin">
                            <div class="team team-list clearfix">
                                <div class="team-image">
                                    
                                
                                     <% if(project.players[i].images && project.players[i].images.length){%>
                                        <img src="image/resized2/<%- project.players[i].images[0].filename %>" alt="ctvb - <%- project.players[i].images[0].filename %>">
                                     <%}else{%>
                                         <img src="images/front/team/1.jpg" alt="CTVB ">
                                     <%}%>
                                </div>
                                
                                <div class="team-desc">
                                    <div class="team-title"><h4><%- project.players[i].name %></h4><span><%- project.players[i].poste %></span></div>
                                    <% if(project.players[i].content){%>
                                        <div class="team-content">
                                            <%- project.players[i].content %>
                                        </div>
                                    <%}%>
                                    <% if(project.players[i].facebook ){%>
                                        <a href="<%- project.players[i].facebook %>" class="social-icon inline-block si-small si-light si-rounded si-facebook">
                                            <i class="icon-facebook"></i><i class="icon-facebook"></i>
                                        </a>
                                     <%}%>
                                     <% if(project.players[i].twitter ){%>
                                        <a href="<%- project.players[i].twitter %>" class="social-icon inline-block si-small si-light si-rounded si-twitter">
                                            <i class="icon-twitter"></i><i class="icon-twitter"></i>
                                        </a>
                                     <%}%>
                                     <% if(project.players[i].instagram ){%>
                                        <a href="<%- project.players[i].instagram %>" class="social-icon inline-block si-small si-light si-rounded si-instagram">
                                            <i class="icon-instagram"></i><i class="icon-instagram"></i>
                                        </a>
                                     <%}%>
                                     <% if(project.players[i].snapchat ){%>
                                        <a href="<%- project.players[i].snapchat %>" class="social-icon inline-block si-small si-light si-rounded si-snapchat">
                                            <i class="icon-snapchat"></i><i class="icon-snapchat"></i>
                                        </a>
                                     <%}%>
                                </div>
                            </div>
                        </div>
                    <%}%>
                </div>
                
                


                

                

                <div class="clear"></div>
                <div class="section nomargin">
                    <div class="container clearfix">
                        <div class="heading-block center nomargin">
                            <h3>À propos de l'équipe</h3>
                        </div>
                    </div>
                </div>

                <div class=""  style="margin: 20px 0px;font-size: 2em;">
                    <div class="container clearfix">
                        <% if( project.content && project.content){%>
                                <%- project.content %>                        
                        <% } %>  
                    </div>
                </div>
                <div class="clear"></div>

                <div class="section nomargin">
                    <div class="container clearfix">
                        <div class="heading-block center nomargin">
                            <h3>Quelques photos</h3>
                        </div>
                    </div>
                </div>
                <% if( project.images && project.images.length){%>  
                <div class="nomargin masonry-thumbs col-4" data-lightbox="gallery" style="margin-bottom:-80px !important">
                    <% for(var i=0; i<project.images.length; i++) {%>
                    <a href="image/originalSize/<%= project.images[i].filename %>" data-lightbox="gallery-item"><img class="image_fade" src="image/adminThumbs/<%= project.images[i].filename %>" alt="<%= project.images[i].alt %>"></a>
                    <% } %>  
                </div>
                <% } %>
                

                

                

            </div>

        </section><!-- #content end -->

        <% include footer.ejs %>

    </div><!-- #wrapper end -->

    <!-- Go To Top
    ============================================= -->
    <div id="gotoTop" class="icon-angle-up"></div>

    <!-- Footer Scripts
    ============================================= -->
    <!-- // <script type="text/javascript" src="js/functions.js"></script> -->

</body>